---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>{{ site.url }}/</loc>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  {# Destination Pages #}
  {% for destination in destinations %}
  <url>
    <loc>{{ site.url }}/destinations/{{ destination.slug }}/</loc>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  {% endfor %}
  
  {# Property Pages #}
  {% for property in properties %}
  <url>
    <loc>{{ site.url }}/rentals/{{ property.slug }}/</loc>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endfor %}
  
  {# Vacationer SEO Pages #}
  {% for page in seoPages.vacationer %}
  <url>
    <loc>{{ site.url }}/stays/{{ page.slug }}/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
  
  {# Owner SEO Pages #}
  {% for page in seoPages.owner %}
  <url>
    <loc>{{ site.url }}/property-management/{{ page.slug }}/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
</urlset>
